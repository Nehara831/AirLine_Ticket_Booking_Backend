pipeline {
    agent any

    environment {
        DOCKER_USERNAME = credentials('docker-username')
        DOCKER_PASSWORD = credentials('docker-password')
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://your-backend-repo.git'
            }
        }
        stage('Build and Test') {
            steps {
                sh './mvnw clean install'
                sh './mvnw test'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t airline-ticket-booking-backend:latest .'
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-credentials') {
                        sh 'docker tag airline-ticket-booking-backend:latest tnehara831/airline-ticket-booking-backendp:latest'
                        sh 'docker push tnehara831/airline-ticket-booking-backend:latest'
                    }
                }
            }
        }
        stage('Deploy with Ansible') {
            steps {
                git 'https://github.com/Nehara831/ansible-playbooks.git'
                sh '''
                ansible-playbook -i hosts deploy.yml --limit backend
                '''
            }
        }
    }
}
